@using MvcCv.Models.Entity
@model List<TblDeneyimlerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Deneyim Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Baslik</th>
        <th>Alt baslik</th>
        <th>Tarih</th>
    </tr>
    @foreach (var x in Model)
    {
<tr>
    <td>@x.ID</td>
    <td>@x.Baslik</td>
    <td>@x.AltBaslik</td>
    <td>@x.Tarih</td>
    <td><a href="/Deneyimler/DeneyimSil/@x.ID" class=" btn btn-warning">Sil</a></td>
    <td><a href="/Deneyimler/DeneyimGetir/@x.ID" class=" btn btn-warning">Düzenle</a></td>
</tr>
    }
</table>
<a href="/Deneyimler/DeneyimEkle/" class="btn btn-info">Yeni deneyim ekle</a>
